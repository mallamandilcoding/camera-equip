<div class="container">
  <%= simple_form_for @camera do |f| %>
    <%= f.input :model %>
    <%= f.input :brand %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.submit 'Confirm', class: 'btn btn-warning mt-2 rounded-pill' %>
  <% end %>
</div>
